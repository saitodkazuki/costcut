%h1 Listing expenses

%table.table
  %thead
    %tr
      %th Date
      %th Amount
      %th
      %th

  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.created_at
        %td= expense.amount
        %td= link_to 'Edit', edit_expense_path(expense)
        %td= link_to 'Destroy', expense, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Expense', new_expense_path
