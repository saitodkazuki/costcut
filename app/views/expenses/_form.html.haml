= form_for @expense do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.number_field :amount
  -# .field
  -#   = f.label :deleted_at
  -#   = f.datetime_select :deleted_at
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :is_credit_card
    = f.check_box :is_credit_card
  .actions
    = f.submit 'Save'
